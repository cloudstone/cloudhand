<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="87dip"
    android:paddingRight="87dip"
    android:paddingTop="59dip"
    android:paddingBottom="52dip"
    android:orientation="vertical"
    android:background="@drawable/bg_main" >
    
    <LinearLayout 
        android:layout_width="210dip"
        android:layout_height="40dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/bg_dropdown_normal" >
                
        <View 
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_marginLeft="10dip"
            android:background="@drawable/ic_username" />

        <Spinner 
            android:id="@+id/sp_user_name"
            android:layout_width="175dip"
            android:layout_height="50dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/btn_spinner_normal"
            style="@style/Text.large.white" />
                
    </LinearLayout>
            
    <LinearLayout
        android:layout_width="210dip"
        android:layout_height="40dip"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/bg_dropdown_normal" >
            
        <View 
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_marginLeft="7dip"
            android:background="@drawable/ic_password" />
            
        <EditText 
            android:id="@+id/ev_password"
            android:layout_width="138dip"
            android:layout_height="50dip"
            android:paddingLeft="15dip"
            android:background="@drawable/bg_dropdown_normal"
            android:inputType="textPassword"
            style="@style/Text.normal.white" />
        
        <CheckBox 
            android:id="@+id/cb_remember"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginRight="2dip"
            android:button="@null"
            android:background="@drawable/selector_login_remember_password" />
        
    </LinearLayout>

    <Button 
        android:id="@+id/btn_login"
        android:layout_width="210dip"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/selector_base_button"
        android:text="@string/login"
        style="@style/Text.xlarge.white" />

 </LinearLayout>
