<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="87dip"
    android:paddingRight="87dip"
    android:paddingTop="59dip"
    android:paddingBottom="52dip"
    android:orientation="vertical"
    android:background="@drawable/bg_main" >

    <LinearLayout
        android:layout_width="210dip"
        android:layout_height="40dip"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_dropdown_normal" >

        <View 
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_margin="5dip"
            android:background="@drawable/ic_table" />
        
        <AutoCompleteTextView
            android:id="@+id/text_table_name"
            style="@style/Text.large.white"
            android:layout_width="175dip"
            android:layout_height="34dip"
            android:layout_marginTop="6dip"
            android:gravity="top"
            android:background="@drawable/bg_dropdown_normal"
            android:completionThreshold="1" >
        </AutoCompleteTextView>
        
    </LinearLayout>
            
    <LinearLayout
        android:layout_width="210dip"
        android:layout_height="40dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_dropdown_normal" >
        
        <View 
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_margin="5dip"
            android:background="@drawable/ic_customernumber" />
        
        <EditText 
            android:id="@+id/edit_password"
            android:layout_width="175dip"
            android:layout_height="40dip"
            android:background="@drawable/bg_dropdown_normal"
            android:inputType="number"
            style="@style/Text.normal.white" />
        
    </LinearLayout>
        
    <LinearLayout
        android:layout_width="210dip"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:gravity="center" >
        
         <Button 
             android:id="@+id/btn_confirm"
             android:layout_width="90dip"
             android:layout_height="45dip"
             android:text="@string/confirm"
             style="@style/Text.large.white"
             android:background="@drawable/selector_base_button" />
     
         <Button 
             android:id="@+id/btn_cancel"
             android:layout_width="90dip"
             android:layout_height="45dip"
             android:layout_marginLeft="15dip"
             android:text="@string/cancel"
             style="@style/Text.large.white"
             android:background="@drawable/selector_base_button" />
    </LinearLayout>
     
</LinearLayout>