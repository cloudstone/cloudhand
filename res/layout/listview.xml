<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/l1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/adapter_name"
        android:layout_width="0dip"
        android:layout_height="45dip"
        android:layout_marginLeft="5dip"
        android:layout_weight="4"
        android:gravity="center_vertical"
        style="@style/Text.large" />
    
    <TextView 
        android:id="@+id/adapter_price"
        android:layout_width="0dip"
        android:layout_height="45dip"
        android:layout_weight="2"
        android:gravity="center_vertical"
        style="@style/Text.large" />
    
    <TextView 
        android:id="@+id/adapter_amount"
        android:layout_width="0dip"
        android:layout_height="45dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        style="@style/Text.large" />
    
    <LinearLayout 
        android:id="@+id/l2"
        android:layout_width="0dip"
        android:layout_height="45dip"
        android:gravity="center_vertical"
        android:layout_weight="4">
        
        <Button 
            android:id="@+id/adapter_add"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="15dip"
            android:background="@drawable/selector_opentable_adapter_add" />
    
        <Button 
            android:id="@+id/adapter_sub"
            android:layout_width="33dip"
            android:layout_height="33dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/selector_opentable_adapter_sub" />
        
    </LinearLayout>
      
    
    

</LinearLayout>
