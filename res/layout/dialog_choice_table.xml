<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TableLayout 
        android:layout_width="384dip"
        android:layout_height="256dip"
        android:gravity="center"
        android:background="@drawable/bg_main" >
        <TableRow
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal" >
                
                <LinearLayout 
                    android:layout_width="210dip"
                    android:layout_height="40dip"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/bg_dropdown_normal">
                    
                    <View 
                        android:layout_marginLeft="10dip"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/icon_table"/>
                
          
        
            <AutoCompleteTextView 
                android:id="@+id/text_table_name" 
                android:layout_width="175dip"
                android:layout_height="50dip"
                android:background="@drawable/bg_dropdown_normal"
                android:completionThreshold="1"
                style="@style/Text.large.white" />
            </LinearLayout>
        </TableRow>
            
        <TableRow
            android:layout_marginTop="7dip"
            android:gravity="center_horizontal" >
                <LinearLayout 
                    android:layout_width="210dip"
                    android:layout_height="40dip"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/bg_dropdown_normal">
                <View 
                    android:layout_marginLeft="10dip"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/icon_customernumber"/>
            <EditText 
                android:id="@+id/edit_password"
                android:layout_width="175dip"
                android:layout_height="50dip"
                android:paddingLeft="11dip"
                android:background="@drawable/bg_dropdown_normal"
                android:inputType="textPassword"
                style="@style/Text.normal.white" />
            </LinearLayout>
        </TableRow>
        
        <TableRow
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal" >
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >
        
            <Button 
                android:id="@+id/button_confirm"
                android:layout_width="90dip"
                android:layout_height="45dip"
                android:text="@string/confirm"
                style="@style/Text.large.white"
                android:background="@drawable/selector_base_button" />
        
            <Button 
                android:id="@+id/button_cancle"
                android:layout_width="90dip"
                android:layout_height="45dip"
                android:layout_marginLeft="15dip"
                android:text="@string/cancel"
                style="@style/Text.large.white"
                android:background="@drawable/selector_base_button" />
        </LinearLayout>
        </TableRow>
     
    </TableLayout>

 </LinearLayout>  
